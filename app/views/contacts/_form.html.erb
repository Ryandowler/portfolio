


<style>
	#box{
    border: 1px solid rgb(253, 150, 81);
    box-shadow: rgba(0, 0, 0, 0.1) 0px 5px 5px 2px;
    background: rgb(253, 150, 81)
    border-radius: 4px;
    top:50px;
}

h2{
    text-align:center;
    color:#000000;
}

input{ width: 100%; }

</style>


<h2>Send a message</h2>
<div class="col-md-offset-4 col-md-4" id="box">
<hr>
<%= simple_form_for @contact, html: { class: "form-horizontal", id: "contact_form"} do |f| %>
  <%# f.error_notification %>

  <div class="form-inputs">
    <%# f.input :name %>
    <%# f.input :email %>
    <%# f.input :body %>
  </div>

    <fieldset>
        <div class="form-group">
            <div class="col-md-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <%= f.input :name, class: "form-control", label: false, placeholder: "Name", type: "text" %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <%= f.input :email, class: "form-control", label: false, placeholder: "E-Mail Address", type: "text" %>
                </div>
            </div>
        </div>
        <!-- Text input-->
        <div class="form-group">

            <div class="col-md-12 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    <%= f.input :body, class: "form-control", label: false, placeholder: "Whats up?", type: "text" %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">				
    			<%= button_tag(type: "submit", class: "btn btn-warning pull-right") do %>
				  Send <span class="glyphicon glyphicon-send"></span>
				<% end %>
            </div>
        </div>
    </fieldset>
</div>
<% end %>